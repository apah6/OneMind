<Window x:Class="OneMind.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OneMind"
        Height="700"
        Width="935"
        Background="Black">

    <Grid>
        <Label x:Name="lblKeyword"
               Content="제시어: 준비중..."
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,20,0,0"
               FontSize="28"
               FontWeight="Bold"
               Foreground="White"
               Background="#33000000"
               Width="400"
               Height="60"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>

        <Label x:Name="lblScore"
               Content="점수: 0 / 10"
               HorizontalAlignment="Right"
               Margin="0,32,40,0"
               VerticalAlignment="Top"
               FontSize="20"
               FontWeight="Bold"
               Foreground="Lime"/>

        <Image x:Name="imgPlayer1"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Width="320"
               Height="318"
               Margin="110,234,0,0"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <Image x:Name="imgPlayer2"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Width="320"
               Height="318"
               Margin="0,234,80,0"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <ProgressBar x:Name="pgrTime"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Margin="0,109,0,0"
                     Width="400"
                     Height="20"
                     Maximum="100"
                     Value="0"
                     Foreground="Lime"
                     Background="#222"/>

        <Button x:Name="btnStop"
                Content="게임 중단"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,80,30"
                Width="120"
                Height="40"
                FontWeight="Bold"
                Background="#FF3333"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"/>

        <Label x:Name="lblPerceive1"
               Content="1번 키넥트 인식"
               HorizontalAlignment="Left"
               Margin="208,184,0,0"
               VerticalAlignment="Top"
               Foreground="White"
               FontWeight="Bold"/>

        <Label x:Name="lblPerceive2"
               Content="2번 키넥트 인식"
               HorizontalAlignment="Right"
               Margin="0,184,200,0"
               VerticalAlignment="Top"
               Foreground="White"
               FontWeight="Bold"/>
    </Grid>
</Window>
