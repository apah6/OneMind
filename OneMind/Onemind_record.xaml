<Window x:Class="OneMind.Onemind_record"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneMind"
        mc:Ignorable="d"
        Title="One mind" Height="600" Width="960"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A"
        Loaded="MainWindow_Loaded">
    <Window.Resources>
        <Color x:Key="PrimaryColor">#6366F1</Color>
        <Color x:Key="PrimaryDarkColor">#4F46E5</Color>
        <Color x:Key="AccentColor">#22D3EE</Color>
        <Color x:Key="CardBgColor">#111827</Color>
        <Color x:Key="TextMainColor">#E5E7EB</Color>
        <Color x:Key="TextSubColor">#9CA3AF</Color>

        <SolidColorBrush x:Key="CardBgBrush" Color="{StaticResource CardBgColor}"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="{StaticResource TextMainColor}"/>
        <SolidColorBrush x:Key="TextSubBrush" Color="{StaticResource TextSubColor}"/>
        <SolidColorBrush x:Key="BorderBaseBrush" Color="#334155"/>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RecordReturnButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="0"/>
                                            <GradientStop Color="{StaticResource PrimaryColor}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#6366F1" Opacity="0.5" BlurRadius="15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid>
            <Ellipse
                Width="620" Height="620"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="-200,-180,0,0"
                Fill="#6C63FF" Opacity="0.22" />

            <Ellipse
                Width="760" Height="760"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,-240,-220"
                Fill="#14B8A6" Opacity="0.18" />
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                Text="게임 결과"
                FontSize="44"
                Foreground="{StaticResource TextMainBrush}" 
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,40,0,20"/>

            <Border Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" Width="700"  Height="360" CornerRadius="24"
                Background="{StaticResource CardBgBrush}" 
                BorderBrush="{StaticResource BorderBaseBrush}" 
                BorderThickness="2"
                Padding="15">
                <Border.Effect>
                    <DropShadowEffect 
                        ShadowDepth="0" 
                        Color="{StaticResource PrimaryColor}" Opacity="0.2"  BlurRadius="30"/>
                </Border.Effect>

                <DataGrid
                    x:Name="ResultDataGrid"
                    AutoGenerateColumns="False" 
                    IsReadOnly="True"
                    HeadersVisibility="Column"
                    GridLinesVisibility="None"
                    Background="{StaticResource CardBgBrush}"  BorderThickness="0"
                    RowHeaderWidth="0"
                    Foreground="{StaticResource TextMainBrush}"
                    RowBackground="Transparent"
                    AlternatingRowBackground="#1AFFFFFF" Grid.IsSharedSizeScope="True"
                    Margin="0">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#1AFFFFFF"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSubBrush}"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="10,0"/>
                        </Style>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2A3348"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="팀명" Binding="{Binding UserID}" Width="2*" />
                        <DataGridTextColumn Header="카테고리 ID" Binding="{Binding CategoryID}" Width="1.5*" />
                        <DataGridTextColumn Header="점수" Binding="{Binding Score}" Width="1*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Button Grid.Row="2"
                x:Name="ExitButton"
                Content="돌아가기"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,30,0,40" Style="{StaticResource RecordReturnButton}"
                Click="Button_Click"/>

        </Grid>
    </Grid>
</Window>