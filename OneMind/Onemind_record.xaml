<Window x:Class="OneMind.Onemind_record"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneMind"
        mc:Ignorable="d"
        Title="Onemind_record" Height="450" Width="800">
    <Grid Background="Black">
        <TextBlock 
        HorizontalAlignment="Center" 
        Margin="0,27,0,0" 
        TextWrapping="Wrap" 
        Text="게임결과" 
        VerticalAlignment="Top" 
        FontSize="30"                      
        Foreground="White"                 
        FontWeight="Bold"/>

        <TextBlock
        HorizontalAlignment="Center" 
        TextWrapping="Wrap" 
        Text="TextBlock" 
        VerticalAlignment="Top" 
        Height="270" 
        Width="616" 
        Margin="0,85,0,0"
        x:Name="ResultDisplayTextBlock"
            Background="White"/>

        <Button 
        Content="돌아가기" 
        HorizontalAlignment="Left" 
        Margin="608,363,0,0" 
        VerticalAlignment="Top" 
        Click="Button_Click"
        Background="#FF8A2BE2"           
        Foreground="White"                
        FontSize="14"                     
        Width="100" Height="30"/>

    </Grid>
</Window>
