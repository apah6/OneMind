<Window x:Class="OneMind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="One Mind" Height="600" Width="960"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Window.Resources>

        <Color x:Key="PrimaryColor">#6366F1</Color>
        <Color x:Key="PrimaryDarkColor">#4F46E5</Color>
        <Color x:Key="AccentColor">#22D3EE</Color>
        <Color x:Key="CardBgColor">#111827</Color>
        <Color x:Key="TextMainColor">#E5E7EB</Color>
        <Color x:Key="TextSubColor">#9CA3AF</Color>

        <SolidColorBrush x:Key="CardBgBrush" Color="{StaticResource CardBgColor}"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="{StaticResource TextMainColor}"/>
        <SolidColorBrush x:Key="TextSubBrush" Color="{StaticResource TextSubColor}"/>
        <SolidColorBrush x:Key="BorderBaseBrush" Color="#334155"/>

        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBaseBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border CornerRadius="12"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}" />

                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="4"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>

                            <TextBlock x:Name="Placeholder"
                               Text="닉네임을 입력하세요"
                               Foreground="{StaticResource TextSubBrush}"
                               Opacity="0.6"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>

                        </Grid>

                        <ControlTemplate.Triggers>

                            <!-- 빈 문자열일 때만 플레이스홀더 표시 -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value=""/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>

                            <!-- 텍스트가 하나라도 있으면 숨김 -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}" Value="0"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>

                            <!-- 1글자 이상이면 숨김 -->
                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}" Value="1">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}" Value="2">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}}" Value="3">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlineButton" BasedOn="{StaticResource RoundedButton}" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBaseBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- ★ 드롭다운 크기 = 콤보박스 크기 동일 버전 -->
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBaseBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">

                        <Grid>

                            <Border x:Name="Bd"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>

                            <DockPanel Margin="8,2">
                                <ToggleButton DockPanel.Dock="Right"
                                              Background="{x:Null}" BorderBrush="{x:Null}"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="{StaticResource TextSubBrush}"
                                          Margin="4"
                                          Width="16" Height="10"/>
                                </ToggleButton>

                                <ContentPresenter 
                                    Content="{TemplateBinding SelectionBoxItem}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </DockPanel>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide"
                                   IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border Background="#0B1220"
                                        CornerRadius="12"
                                        BorderBrush="{StaticResource BorderBaseBrush}"
                                        BorderThickness="2"
                                        Padding="6"
                                        Width="{Binding ActualWidth, ElementName=Bd}">

                                    <ScrollViewer MaxHeight="260">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>

                                </Border>
                            </Popup>

                        </Grid>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="12"/>
                        <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
                    </Style>
                </Setter.Value>
            </Setter>

        </Style>

        <Style x:Key="CaptionText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSubBrush}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid>
            <!-- 왼쪽 상단 보라빛 글로우 -->
            <Ellipse
        Width="620"
        Height="620"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="-200,-180,0,0"
        Fill="#6C63FF"
        Opacity="0.22" />

            <!-- 오른쪽 하단 블루/청록 글로우 -->
            <Ellipse
        Width="760"
        Height="760"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0,0,-240,-220"
        Fill="#14B8A6"
        Opacity="0.18" />
        </Grid>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource CardBgBrush}"
                CornerRadius="24"
                Padding="36"
                Width="720">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="One Mind"
                           Foreground="{StaticResource TextMainBrush}"
                           FontSize="44"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <TextBlock Grid.Row="2"
                           Text="닉네임을 입력하세요"
                           Style="{StaticResource CaptionText}"/>

                <TextBox Grid.Row="4"
                         x:Name="NicknameBox"
                         Style="{StaticResource RoundedTextBox}"
                         Width="560"
                         Height="58"/>

                <TextBlock Grid.Row="6"
                           Text="카테고리를 선택하세요"
                           Style="{StaticResource CaptionText}"/>

                <ComboBox Grid.Row="8"
                          Style="{StaticResource RoundedComboBox}"
                          Width="560"
                          Height="58"
                          SelectedIndex="0">
                    <ComboBoxItem>동물</ComboBoxItem>
                    <ComboBoxItem>스포츠</ComboBoxItem>
                    <ComboBoxItem>직업</ComboBoxItem>
                </ComboBox>

                <StackPanel Grid.Row="10"
                            Width="560"
                            Orientation="Vertical"
                            HorizontalAlignment="Center">
                    <Button x:Name="StartButton"
                            Height="58"
                            Content="게임 시작"
                            Style="{StaticResource RoundedButton}"
                            Margin="0,0,0,10" Click="StartButton_Click"/>
                    <Button x:Name="ExitButton"
                            Height="58"
                            Content="게임 종료"
                            Style="{StaticResource OutlineButton}" Click="ExitButton_Click"/>
                </StackPanel>

                <TextBlock Grid.Row="12"
                           Text="Tip: 닉네임 입력 후 카테고리를 선택하고 [게임 시작]을 누르세요."
                           Style="{StaticResource CaptionText}"/>

            </Grid>
        </Border>
    </Grid>
</Window>
