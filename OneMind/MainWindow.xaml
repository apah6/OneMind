<Window x:Class="OneMind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="One Mind"
        Height="600"
        Width="960"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <Window.Resources>

        <!-- Colors -->
        <Color x:Key="PrimaryColor">#6366F1</Color>
        <Color x:Key="PrimaryDarkColor">#4F46E5</Color>
        <Color x:Key="AccentColor">#22D3EE</Color>
        <Color x:Key="CardBgColor">#111827</Color>
        <Color x:Key="TextMainColor">#E5E7EB</Color>
        <Color x:Key="TextSubColor">#9CA3AF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="CardBgBrush" Color="{StaticResource CardBgColor}"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="{StaticResource TextMainColor}"/>
        <SolidColorBrush x:Key="TextSubBrush" Color="{StaticResource TextSubColor}"/>
        <SolidColorBrush x:Key="BorderBaseBrush" Color="#334155"/>

        <!-- rounded Textbox -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBaseBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Bd"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>

                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="10,6"/>

                            <TextBlock x:Name="Watermark"
                                       Text="닉네임 입력"
                                       Foreground="{StaticResource TextSubBrush}"
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- 텍스트 있을 때 워터마크 숨김 -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsKeyboardFocused" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="Bd" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource AccentColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsKeyboardFocused" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>

                            <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Buttons -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBaseBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBaseBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </Window.Resources>


    <!-- ========== LAYOUT ========== -->
    <Grid>

        <Border Background="{StaticResource CardBgBrush}"
                CornerRadius="24"
                Padding="36"
                Width="720"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 0: 타이틀 -->
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 2: 닉네임 캡션 -->
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 4: 닉네임 박스 -->
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 6: 카테고리 텍스트 -->
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 8: 콤보박스 -->
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 10: 버튼들 -->
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 12: 하단 텍스트 -->
                </Grid.RowDefinitions>

                <!-- 타이틀 -->
                <TextBlock Grid.Row="0"
                           Text="One Mind"
                           FontSize="44"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextMainBrush}"
                           HorizontalAlignment="Center"/>

                <!-- 닉네임 텍스트 -->
                <TextBlock Grid.Row="2"
                           Text="닉네임을 입력하세요"
                           Foreground="{StaticResource TextSubBrush}"
                           FontSize="18"
                           HorizontalAlignment="Center"/>

                <!-- 닉네임 입력박스 -->
                <TextBox Grid.Row="4"
                         x:Name="NicknameBox"
                         Style="{StaticResource RoundedTextBox}"
                         Width="560"
                         Height="58"/>

                <!-- 카테고리 텍스트 -->
                <TextBlock Grid.Row="6"
                           Text="카테고리를 선택하세요"
                           Foreground="{StaticResource TextSubBrush}"
                           FontSize="18"
                           HorizontalAlignment="Center"/>

                <!-- 콤보박스 -->
                <ComboBox Grid.Row="8"
                          Style="{StaticResource RoundedComboBox}"
                          Width="560"
                          Height="58"
                          SelectedIndex="0">
                    <ComboBoxItem>동물</ComboBoxItem>
                    <ComboBoxItem>스포츠</ComboBoxItem>
                    <ComboBoxItem>직업</ComboBoxItem>
                </ComboBox>

                <!-- 버튼 -->
                <StackPanel Grid.Row="10"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            Width="560">
                    <Button x:Name="StartButton"
                            Content="게임 시작"
                            Height="58"
                            Style="{StaticResource RoundedButton}"
                            Margin="0,0,0,12"/>

                    <Button x:Name="ExitButton"
                            Content="게임 종료"
                            Height="58"
                            Style="{StaticResource OutlineButton}"/>
                </StackPanel>

                <TextBlock Grid.Row="12"
                           Text="Tip: 닉네임을 입력 후 게임을 시작하세요."
                           Foreground="{StaticResource TextSubBrush}"
                           FontSize="15"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
