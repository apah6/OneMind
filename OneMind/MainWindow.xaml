<Window x:Class="OneMind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="One Mind" Height="600" Width="960"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">

    <!-- ===== Colors & Brushes ===== -->
    <Window.Resources>
        <!-- Colors -->
        <Color x:Key="PrimaryColor">#6366F1</Color>
        <Color x:Key="PrimaryDarkColor">#4F46E5</Color>
        <Color x:Key="AccentColor">#22D3EE</Color>
        <Color x:Key="CardBgColor">#111827</Color>
        <Color x:Key="TextMainColor">#E5E7EB</Color>
        <Color x:Key="TextSubColor">#9CA3AF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="CardBgBrush" Color="{StaticResource CardBgColor}"/>
        <SolidColorBrush x:Key="TextMainBrush" Color="{StaticResource TextMainColor}"/>
        <SolidColorBrush x:Key="TextSubBrush" Color="{StaticResource TextSubColor}"/>
        <SolidColorBrush x:Key="BorderBaseBrush" Color="#334155"/>

        <!-- Rounded Primary Button -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.45" Color="#334155"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Outline Button -->
        <Style x:Key="OutlineButton" BasedOn="{StaticResource RoundedButton}" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBaseBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="14"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource AccentColor}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.35" Color="#0891B2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBaseBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Bd" CornerRadius="12"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <DockPanel Margin="8,2">
                                <ToggleButton DockPanel.Dock="Right"
                                              Focusable="False"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"
                                              Background="{x:Null}" BorderBrush="{x:Null}">
                                    <Path Margin="8,2,4,2" Data="M 0 0 L 4 4 L 8 0 Z"
                                          Stretch="Uniform" Width="16" Height="10"
                                          Fill="{StaticResource TextSubBrush}"/>
                                </ToggleButton>
                                <ContentPresenter Margin="6,4"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </DockPanel>
                            <Popup Name="PART_Popup" Placement="Bottom"
                                   AllowsTransparency="True"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   PopupAnimation="Fade">
                                <Border Background="#0B1220" BorderBrush="{StaticResource BorderBaseBrush}"
                                        BorderThickness="2" CornerRadius="12" Padding="6">
                                    <ScrollViewer CanContentScroll="True" SnapsToDevicePixels="True" MaxHeight="220">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource AccentColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="itemBd" Background="Transparent" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="itemBd" Property="Background" Value="#1E293B"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="itemBd" Property="Background" Value="#263248"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextMainBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Caption -->
        <Style x:Key="CaptionText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSubBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- ===== Layout ===== -->
    <Grid>
        <Grid>
            <Ellipse Width="520" Height="520" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-160,-140,0,0"
                     Fill="#23213A" Opacity="0.35"/>
        </Grid>

        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{StaticResource CardBgBrush}" CornerRadius="24"
                Padding="36" Width="720">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.35" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="One Mind"
                           Foreground="{StaticResource TextMainBrush}"
                           FontSize="44" FontWeight="Bold"
                           HorizontalAlignment="Center" />

                <TextBlock Grid.Row="2" Text="카테고리를 선택하세요"
                           Style="{StaticResource CaptionText}"/>

                <ComboBox Grid.Row="4" Style="{StaticResource RoundedComboBox}"
                          Width="560" Height="58" SelectedIndex="0">
                    <ComboBoxItem>동물</ComboBoxItem>
                    <ComboBoxItem>스포츠</ComboBoxItem>
                    <ComboBoxItem>직업</ComboBoxItem>
                </ComboBox>

                <StackPanel Grid.Row="6" Orientation="Vertical" HorizontalAlignment="Center" Width="560" >
                    <Button x:Name="StartButton" Content="게임 시작"
                            Height="58" Style="{StaticResource RoundedButton}" Margin="0,0,0,12"/>
                    <Button x:Name="ExitButton" Content="게임 종료"
                            Height="58" Style="{StaticResource OutlineButton}"/>
                </StackPanel>

                <TextBlock Grid.Row="8" Text="Tip: [게임 시작]을 누르면 다음 화면으로 전환됩니다."
                           Style="{StaticResource CaptionText}" />
            </Grid>
        </Border>
    </Grid>
</Window>
